[server]
# Listen on all network interfaces, port 5232
hosts = 0.0.0.0:5232

# Optional: base URL path (only if behind reverse proxy)
# base_prefix = /radicale/

[storage]
# Store user calendars relative to this config directory
filesystem_folder = ./radicale/data/collections

[auth]
# Require users in htpasswd file (relative to this config directory)
type = htpasswd
htpasswd_filename = ./radicale/config/users
htpasswd_encryption = plain
realm = Radicale

[rights]
# Each user can access only their own collections
type = owner_only

[logging]
# Log level: info, warning, debug, etc.
level = info

[web]
# Enable the built-in web UI
type = internal